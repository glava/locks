<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd"
        logicalFilePath="crate_game.xml">

    <changeSet id="1" author="locker">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="_GAME" />
            </not>
        </preConditions>

        <createTable tableName="_GAME">
            <column name="_ID" type="varchar(40)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="_USER_ID" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="_WEEK_ID" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="_LOCKED_TEAM_ID" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="_POINTS" type="double">
                <constraints nullable="true"/>
            </column>
            <column name="_CREATED" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="_UPDATED" type="bigint">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>